<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateRoomActivity"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary">

        <TextView
            android:id="@+id/tool_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:text="Creating Room">
        </TextView>
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:text="Room name"
        android:textColor="#6A6A6A"
        android:textSize="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:backgroundTint="#00FAFAFA"
            app:srcCompat="@drawable/add"
            app:tint="#316190"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            />
        <EditText
            android:id="@+id/room_name"
            android:layout_width="330dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:text="Shared user"
        android:textColor="#6A6A6A"
        android:textSize="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="40dp"
        >
        <EditText
            android:id="@+id/edit_user_search"
            android:layout_width="300dp"
            android:layout_height="wrap_content" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#00FAFAFA"
            app:srcCompat="?android:attr/actionModeWebSearchDrawable"
            app:tint="#316190"
            android:layout_gravity="center"
            />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginVertical="15dp"
        android:textColor="#6A6A6A"
        android:text="Selected people"
        android:textSize="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <ImageView
            android:id="@+id/imgBtn_people1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/profile"
            android:backgroundTint="#00fafafa"/>
            <TextView
                android:id="@+id/people1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hyowon"
                android:layout_gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imgBtn_people2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:srcCompat="@drawable/profile"
                android:backgroundTint="#00fafafa"/>
            <TextView
                android:id="@+id/people2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="yoonji"
                android:layout_gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imgBtn_people3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:srcCompat="@drawable/profile"
                android:backgroundTint="#00fafafa"/>
            <TextView
                android:id="@+id/people3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="jeongsol"
                android:layout_gravity="center"/>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:backgroundTint="#316190"
        android:textColor="@color/white"
        android:text="Create"
        android:textAllCaps="false"
        android:textSize="24dp" />

</LinearLayout>